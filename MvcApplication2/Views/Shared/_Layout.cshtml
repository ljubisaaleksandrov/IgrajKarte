<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />

    <title>@ViewBag.Title</title>
    
    <link rel="shortcut icon" href="@Url.Content("~/Content/favicon.ico")" />
    
    <link href="@Url.Content("~/Resources/Css/default.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Resources/Css/game.css")" rel="stylesheet" type="text/css" />


    <script src="@Url.Content("~/Scripts/custom.js")" type="text/javascript"></script>
    
    <script src="@Url.Content("~/Scripts/jquery-1.7.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.20.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.maskedinput-1.3.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.watermark.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.ui.datepicker.js")" type="text/javascript"></script>
 
    <script type="text/javascript">

        function comingSoon(msg) {
            $("#dialog").dialog({
                buttons: {
                    "Close": function () {
                        $(this).dialog("close");
                    }
                },
                width: 550
            });

            $("#dialog").html("The transaction process for <strong>" + msg + "</strong> is currently being developed and tested, we look forward to providing this additional functionality to you in the near future.");
            $("#dialog").dialog("open");
        }

        function configError(msg) {
            $("#dialog").dialog({
                buttons: {
                    "Close": function () {
                        $(this).dialog("close");
                    }
                },
                width: 550
            });

            $("#dialog").html("The transaction process for <strong>" + msg + "</strong> has configuration issue. Please try again after sometime.");
            $("#dialog").dialog("open");
        }
    </script>
</head>

<body class="@ViewBag.CurrentAction">
    <div id="wrapper">
        <div id="header">
            <a href="/" target="_blank" id="logo">Kartaros</a> 
            <b>@Session["CurrentuserId"]</b>
            
            @Html.Partial("TopMenu")
            
            <div class="clear"></div>
        </div>
            
            
        <div id="main">
            @RenderBody()
        </div>
        
        <div class="clear"></div>
        <div id="footer">
            <p style="text-align:left; display:inline; width:460px; position: relative; float: left;">Copyright &copy; 2014 Bube All rights reserved.</p>
            <p style="text-align:right; display:inline; width:460px; position: relative; float: left;">
                <a style="color:#000; padding:0 4px;" href="/Account/TermsOfService">Terms of Service</a> •
                <a style="color:#000; padding:0 4px;" href="/Account/PrivacyStatement">Privacy Statement</a> •
                <a style="color:#000; padding:0 4px;" href="/Account/FeeSchedule">Fee Schedule</a> 
            </p>
		 <div class="clear"></div>
        </div>
        
        <div id="confirmDialog" class="none" title="Confirmation Dialog">Do you want to continue?</div>
    </div>
    
</body>
</html>
